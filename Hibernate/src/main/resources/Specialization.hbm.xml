<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name = "org.example.Specialization" table = "specialization">
        <meta attribute="class-description">
            Класс содержит данные о специализациях работников
        </meta>
        <id name="id" type="int" column="id_specialization">
            <generator class="identity"/>
        </id>
        <property name="name" column="name_specialization" type="string"/>
    </class>
</hibernate-mapping>